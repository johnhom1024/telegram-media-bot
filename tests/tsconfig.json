{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",

    "baseUrl": "./",
    "paths": {
      "@/*": ["../src/*"]
    },

    "strict": true
  },
  "include": [".", "../src"]
}
